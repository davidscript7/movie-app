  {
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".",
    "typeRoots": ["./types", "./node_modules/@types"],
    "paths": {
      "@/*": [
        "./*"
      ]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    ".expo/types/expo-env.d.ts",
    "app/_layout.tsx",
    ".expo/types/nativewind-env.d.ts",
    "types/**/*.d.ts",
    "nativewind-env.d.ts",
    "expo-env.d.ts",
    "**/*.d.ts"
  ],
    "exclude": ["node_modules"]
}
